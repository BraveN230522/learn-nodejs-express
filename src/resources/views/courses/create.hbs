<div class='d-flex flex-column p-4' style='background-color: white; min-height: 100vh'>
  <h1>Create a new course</h1>
  <form method='post' action='/courses/store'>
    <div class='form-group mb-3'>
      <label for='title'>Title</label>
      <input class='form-control' id='title' name='title' placeholder='Enter title' />
    </div>
    <div class='form-group mb-3'>
      <label for='description'>Description</label>
      <input class='form-control' id='description' name='description' placeholder='Enter Description' />
    </div>
    <div class='form-group mb-3'>
      <label for='image'>Image</label>
      <input type='file' class='form-control' id='image' name='image' placeholder='' />
    </div>
    <button type='submit' class='btn btn-primary'>Submit</button>
  </form>
</div>